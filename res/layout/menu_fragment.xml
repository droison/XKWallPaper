<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/menu_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/menu_head"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:padding="2dp"
            android:src="@drawable/default_head" />

        <TextView
            android:id="@+id/menu_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu_head"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="Summer"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_tab_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_tab_search"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingBottom="15dp"
                    android:paddingLeft="0dp"
                    android:paddingTop="15dp"
                    android:src="@drawable/iv_tab_search" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="0dp"
                    android:paddingTop="15dp"
                    android:text="搜\u0020\u0020\u0020\u0020\u0020\u0020\u0020\u0020索"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tab_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_tab_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingBottom="15dp"
                    android:paddingLeft="0dp"
                    android:paddingTop="15dp"
                    android:src="@drawable/iv_tab_pic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="0dp"
                    android:paddingTop="15dp"
                    android:text="壁\u0020\u0020\u0020\u0020\u0020\u0020\u0020\u0020纸"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tab_lockpaper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_tab_lockpaper"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingBottom="15dp"
                    android:paddingLeft="0dp"
                    android:paddingTop="15dp"
                    android:src="@drawable/iv_tab_lock" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="0dp"
                    android:paddingTop="15dp"
                    android:text="锁\u0020\u0020\u0020\u0020\u0020\u0020\u0020\u0020屏"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tab_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_tab_video"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingBottom="15dp"
                    android:paddingLeft="0dp"
                    android:paddingTop="15dp"
                    android:src="@drawable/iv_tab_video" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="0dp"
                    android:paddingTop="15dp"
                    android:text="视\u0020\u0020\u0020\u0020\u0020\u0020\u0020\u0020频"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tab_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_tab_my"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingBottom="15dp"
                    android:paddingLeft="0dp"
                    android:paddingTop="15dp"
                    android:src="@drawable/iv_tab_my" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="0dp"
                    android:paddingTop="15dp"
                    android:text="我\u0020\u0020\u0020\u0020\u0020\u0020\u0020\u0020的"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tab_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_tab_set"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingBottom="15dp"
                    android:paddingLeft="0dp"
                    android:paddingTop="15dp"
                    android:src="@drawable/iv_tab_set" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="0dp"
                    android:paddingTop="15dp"
                    android:text="个人设置"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tab_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_tab_about"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingBottom="15dp"
                    android:paddingLeft="0dp"
                    android:paddingTop="15dp"
                    android:src="@drawable/iv_tab_about" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="0dp"
                    android:paddingTop="15dp"
                    android:text="关\u0020\u0020\u0020\u0020\u0020\u0020\u0020\u0020于"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>